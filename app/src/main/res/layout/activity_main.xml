<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/adsLinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:visibility="gone"
        android:gravity="center_horizontal|center_vertical">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="ca-app-pub-8558357952484896/6048077643">
            <!--ca-app-pub-8558357952484896/6048077643 real-->
            <!--ca-app-pub-3940256099942544/6300978111 test-->
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <WebView
        android:id="@+id/webview1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45">

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="40"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/darker_gray"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:hint="검색어 입력" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="12sp"
            android:theme="@style/AppTheme.BlueRipple"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:text="동시" />
        <Button
            android:id="@+id/down_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:textSize="12sp"
            android:theme="@style/AppTheme.B2"
            android:background="@drawable/ic_baseline_arrow_downward_24"
            android:text="" />
        <Button
            android:id="@+id/up_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:textSize="12sp"
            android:theme="@style/AppTheme.B3"
            android:background="@drawable/ic_baseline_arrow_upward_24"
            android:text="" />
        <Button
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:textSize="12sp"
            android:theme="@style/AppTheme.B4"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:text="" />

    </LinearLayout>

    <WebView
        android:id="@+id/webview2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45">

    </WebView>
    <LinearLayout
        android:id="@+id/adsLinear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:visibility="gone"
        android:gravity="center_horizontal|center_vertical">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="ca-app-pub-8558357952484896/2986035695">
            <!--ca-app-pub-8558357952484896/2986035695 real-->
            <!--ca-app-pub-3940256099942544/6300978111 test-->
        </com.google.android.gms.ads.AdView>
    </LinearLayout>



</LinearLayout>
